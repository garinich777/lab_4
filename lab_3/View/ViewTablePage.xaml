<Page x:Class="lab_3.View.ViewTablePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:lab_3.VM"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewTablePage">

    <Grid>
        <TabControl x:Name="tc_tabs">
            <TabItem Header="Студенты">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dg_student" SelectionMode="Single" ItemsSource="{Binding Student}" AutoGenerateColumns="True"/>
                </Grid>
            </TabItem>
            <TabItem Header="Оценки">
                <Grid Background="#FFE5E5E5">
                    <DataGrid x:Name="dg_grades" SelectionMode="Single" ItemsSource="{Binding Grades}" AutoGenerateColumns="True"/> 
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Page>
